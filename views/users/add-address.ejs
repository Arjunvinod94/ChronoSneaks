<%- include('../layouts/header.ejs')%>

    <div class="page-wrapper">
        <div class="checkout shopping">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">

                        
                        <div class="block billing-details">
                            <h4 class="widget-title">Add New Address</h4>
                            <form class="checkout-form" action="/edit/address/add-address" method="post">
                                <div class="form-group">
                                    <label for="full_name">Full Name</label>
                                    <input type="text" class="form-control" id="full_name" name="name" placeholder=""
                                        oninput="validateTextField(this)" required>
                                </div>
                                <div class="form-group">
                                    <label for="user_address">Address</label>
                                    <input type="text" class="form-control" id="user_address" name="address"
                                        placeholder="" required>
                                </div>
                                <div class="checkout-country-code clearfix">
                                    <div class="form-group">
                                        <label for="user_post_code">Zip Code</label>
                                        <input type="number" class="form-control" id="user_post_code" name="zipcode"
                                            value="" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="user_city">City</label>
                                        <input type="text" class="form-control" id="user_city" name="city" value=""
                                            required>
                                    </div>
                                </div>
                                <div class="checkout-country-code clearfix">
                                    <div class="form-group">
                                        <label for="user_post_code">State</label>
                                        <input type="text" class="form-control" id="user_state" name="state" value=""
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label for="user_city">Country</label>
                                        <input type="text" class="form-control" id="user_country" name="country"
                                            value="" required>
                                    </div>
                                </div>
        
                                <div class="form-group">
                                    <label for="user_mobile">Mobile</label>
                                    <input type="tel" class="form-control" id="mobile" name="mobile" placeholder=""
                                        oninput="validateMobile(this)" required>
                                </div>
                                <button type="submit" class="btn btn-main mt-20">Add Address</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/validateUser.js"></script>

    <%- include('../layouts/footer.ejs')%>