<%- include('../layouts/header.ejs')%>

<h2>Edit User Details</h2>

<form action="" method="POST">

    <input type="hidden" name="user_id" value="<%= user._id %>" placeholder="Enter your id">
    <br><br>

    <input type="text" name="name" value="<%= user.name %>" placeholder="Enter your Name">
    <br><br>
    <input type="email" name="email" value="<%= user.email %>" placeholder="Enter your Email">
    <br><br>
    <input type="text" name="mno" value="<%= user.mobile %>" placeholder="Enter your Mobile No">
    <br><br>
    <input type="submit" value="Update Profile" onclick="confirmUserEdit(event)">

</form>
<script src="/js/alertPopUp.js"></script>

