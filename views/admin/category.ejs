<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div style="text-align: center;">
                <h1 style="font-size: 30px; text-align: center; font-family: Arial, Helvetica, sans-serif;">Category</h1>
            </div>

            <a href="/admin/category/new-category" class="btn btn-outline-primary">Add Category</a>
            <br><br>

            <div class="table-responsive">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Category</th>
                            <th>Sub Category</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (CategoryData.length > 0) { for (let i = 0; i < CategoryData.length; i++) { %>
                        <tr>
                            <td><%= CategoryData[i].category %></td>
                            <td><%= CategoryData[i].sub_category %></td>
                            <td><%= CategoryData[i].description %></td>
                            <td>
                                <a href="/admin/category/edit-category?id=<%= CategoryData[i]._id %>"
                                    class="btn btn-outline-success">Edit</a>
                                <a href="/admin/category/delete-category?id=<%= CategoryData[i]._id %>"
                                    class="btn btn-outline-danger" onclick="confirmCategoryDelete(event)">Delete</a>
                            </td>
                        </tr>
                        <% } } else { %>
                        <tr>
                            <td colspan="4">Category Not Found</td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/js/alertPopUp.js"></script>
