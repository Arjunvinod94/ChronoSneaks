<%- include('../layouts/adminHeader.ejs') %>

<title>Products</title>

<main>
    <div class="container-fluid mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-10">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 style="font-size: 24px; text-align: center; font-family: Arial, Helvetica, sans-serif; margin: 0;">Product List</h1>
                    <form method="" action="/admin/Products/add" class="ml-auto">
                        <a href="/admin/products/new-product" class="btn btn-outline-success">Add Products</a>
                    </form>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (ProductData.length > 0) { for (let i = 0; i < ProductData.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= ProductData[i].name %></td>
                                <td><%= ProductData[i].description %></td>
                                <td><img width="50px" height="50px" src="/images/productImages/<%= ProductData[i].images %>" alt=""></td>
                                <td>
                                    <a href="/admin/products/view-product?id=<%= ProductData[i]._id %>"
                                        class="btn btn-outline-primary btn-sm">View</a>
                                    <a href="/admin/products/edit-product?id=<%= ProductData[i]._id %>"
                                        class="btn btn-outline-success btn-sm">Edit</a>
                                    <a href="/admin/products/delete-product?id=<%= ProductData[i]._id %>"
                                        class="btn btn-outline-danger btn-sm" onclick="confirmDelete(event)">Delete</a>
                                </td>
                            </tr>
                            <% } } else { %>
                            <tr>
                                <td colspan="5" class="text-center">Products Not Found</td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/js/alertPopUp.js"></script>
