<%- include('../layouts/adminHeader.ejs') %>

<title>Edit Category</title>

<main>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6 border rounded p-4">
                <div class="text-center mb-4">
                    <h1 class="display-4" style="font-size: 30px; font-family: Arial, Helvetica, sans-serif;">Edit Category</h1>
                </div>

                <div class="d-flex justify-content-center align-items-center">
                    <form action="" method="post">
                        <label for="name" class="mr-2">Category Name:</label>
                        <select name="name" id="name" required class="form-control mb-3">
                            <option value="<%= CategoryData.category %>"><%= CategoryData.category %></option>
                            <option value="Sneakers">Sneakers</option>
                            <option value="Watches">Watches</option>
                        </select>

                        <label for="SubCategory" class="mr-2">Sub-Category Name:</label>
                        <select name="SubCategory" id="SubCategory" required class="form-control mb-3">
                            <option value="<%= CategoryData.sub_category %>"><%= CategoryData.sub_category %></option>
                            <option value="Sneakers">Sneakers</option>
                            <option value="Basketball">Basketball</option>
                            <option value="Classics">Classics</option>
                            <option value="Slides">Slides</option>
                            <option value="Automatic Watches">Automatic Watches</option>
                            <option value="Mechanical Watches">Mechanical Watches</option>
                            <option value="Quartz Watches">Quartz Watches</option>
                            <option value="Solar Watches">Solar Watches</option>
                        </select>

                        <label for="description" class="mr-2">Description:</label>
                        <textarea name="description" id="description" cols="30" rows="5" class="form-control mb-3"><%= CategoryData.description %></textarea>

                        <input type="hidden" name="id" value="<%= CategoryData._id %>">
                        <input type="submit" value="Update Category" class="btn btn-success" onclick="confirmEditCategory(event)">
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/js/alertPopUp.js"></script>
