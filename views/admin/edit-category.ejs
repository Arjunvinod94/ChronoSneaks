<%- include('../layouts/adminHeader.ejs') %>

<div style="display: flex; justify-content: center; align-items: center; padding: 20px;">
<h1>Edit Category</h1>
</div>

<div style="display: flex; justify-content: center; align-items: center;">
<form action="" method="post">

    <label for="name">Category Name</label>
    
    <select name="name" id="name" required>
        <option value="<%= CategoryData.category %>"><%= CategoryData.category %></option>
        <option value="Sneakers">Sneakers</option>
        <option value="Watches">Watches</option>
    </select>
    <br><br>

    <label for="SubCategory">Sub-Category Name</label>
    <select name="SubCategory" id="SubCategory" required>
        <option value="<%= CategoryData.sub_category %>"><%= CategoryData.sub_category %></option>
        <option value="Sneakers">Sneakers</option>
        <option value="Basketball">Basketball</option>
        <option value="Classics">Classics</option>
        <option value="Slides">Slides</option>
        <option value="Automatic Watches">Automatic Watches</option>
        <option value="Mechanical Watches">Mechanical Watches</option>
        <option value="Quartz Watches">Quartz Watches</option>
        <option value="Solar Watches">Solar Watches</option>
    </select>
    <br><br>

    <label for="description">Description</label>
    <textarea name="description" id="description" cols="30" rows="10" value="<%= CategoryData.description %>"><%= CategoryData.description %></textarea>
    <br><br>

    <input type="hidden" name="id" value="<%= CategoryData._id %>">
    <input type="submit" value="Update User" onclick="confirmEditCategory(event)">

</form>
</div>

<script src="/js/alertPopUp.js"></script>