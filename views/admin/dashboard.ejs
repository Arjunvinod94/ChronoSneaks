<%- include('../layouts/adminHeader.ejs')%>

<style>
    table,th,td {
        border: 1px solid;
    }
</style>

<div style="text-align: center; padding-top: 20px;">
    <h1>Dashboard</h1>
</div>

<button><a href="/admin/new-user">Add User</a></button>
<br><br>

<table style="width: 50%;">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Verified</th>
        <th>Actions</th>
    </tr>

    <%
        if(users.length>0){

            for(let i=0; i<users.length; i++){
                %>
                <tr>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].mobile %></td>
                    <td>
                        <%
                            if(users[i].is_verified == 0){
                                %>
                                <p>Not Verified</p>
                                <%
                            }else{
                                %>
                                <p>Verified</p>
                                <%
                            }
                        %>
                    </td>

                    <td>
                        <button><a href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a></button>
                        <button><a href="/admin/delete-user?id=<%= users[i]._id %>">Delete</a></button>
                    </td>

                </tr>
                <%
            }

        }else{
            %>
            <tr>
                <td colspan="5">Users Not Found</td>
            </tr>

            <%
        }
    %>

</table>